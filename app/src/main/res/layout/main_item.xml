<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <ImageView
        android:id="@+id/first_iv_rv"
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:src="@drawable/first"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/comment_tv_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="sfdahfksdhfkjhsaldkfhsdklhfklsadhflk"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_margin="5dp"
        android:textColor="@color/black"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@+id/first_iv_rv"
        app:layout_constraintStart_toStartOf="@+id/first_iv_rv"
        app:layout_constraintEnd_toEndOf="@+id/first_iv_rv"
        />
    <TextView
        android:id="@+id/date_tv_rv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@+id/comment_tv_rv"
        app:layout_constraintStart_toStartOf="@+id/comment_tv_rv"
        android:text="September 19"
        android:textColor="@color/black"


        />


</androidx.constraintlayout.widget.ConstraintLayout>